---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section class="flex items-center h-full p-16">
    <div class="items-center justify-center px-5 mx-auto my-8">
      <article class="prose dark:prose-invert prose-md max-w-7xl text-left dark:text-gray-100">
        <h1 class="mb-8 font-bold text-3xl dark:text-gray-100">
          <span class="text-primary">{frontmatter.title}</span>
        </h1>
        
        <slot />
      </article>
    </div>
  </section>
</Layout>
